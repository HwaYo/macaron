#cover {
  background: url("<%= asset_path('city_background.jpg') %>");
  background-size: cover;
  background-position: center center;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  min-width: 100%;
  min-height: 100%;
  z-index: 0;
}

#fb-link{
  width: 220px;
  display: block;
  margin-left: 250px;


  .fb-join {
    background-color: transparent;
    border: 1px solid white;
    width: 220px;
    height: 50px;
    margin-top:30px;
    cursor: pointer;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    border-radius: 10px;

    .fb-join-image {
      position: absolute;
      margin-left: 25px;
      margin-top: 13px;
    }
    .fb-join-text {
      position: absolute;
      margin-top: 15px;
      margin-left: 60px;
      color: #fff;
    }
  }
}
.content {
  border-radius: 10px;
  color: white;
  width: 760px;
  height: 400px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -380px;
  margin-top: -230px;
  text-align: center;
  padding: 20px;
  .main_text {
      margin-top: 130px;
  }
}

.content-wrapper {
  position: relative;
  z-index: 10000;
}